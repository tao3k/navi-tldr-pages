% cgcreate, linux

# Create a new [g]roup
cgcreate -g <group_type>:<group_name>

# Create a new [g]roup with multiple cgroup types
cgcreate -g <group_type1>,<group_type2>:<group_name>

# Create a subgroup
mkdir /sys/fs/cgroup/<group_type>/<group_name>/<subgroup_name>
