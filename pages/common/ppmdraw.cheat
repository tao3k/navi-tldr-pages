% ppmdraw, common

# Draw on the specified PPM image by executing the supplied script
ppmdraw -script '<setpos 50 50; text_here "hello!"; >' <path_to_image.pnm> > <path_to_output.pnm>

# Draw on the specified PPM image by executing the script in the specified file
ppmdraw -scriptfile <path_to_script> <path_to_image.pnm> > <path_to_output.pnm>
